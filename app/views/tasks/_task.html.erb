<div id="<%= dom_id task %>">
  <hr/>
  <div>
    <strong>Title:</strong>
    <%= task.title %>
  </div>

  <div>
    <strong>Status:</strong>
    <%= task.status %>
  </div>
  <div class="links-and-buttons">
    <%= link_to "Show this task", task %>
    <%= button_to "Destroy this task", task, method: :delete %>
  </div>

</div>
